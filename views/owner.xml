    <field name="name">closed</field>
    <field name="model_id" ref="model_owner_owner"/>
    <field name="binding_model_id" ref="model_owner_owner"/>
    <field name="state">code</field>
    <field name="code">actions=records.action_closed()</field>
</record>
<!-- property menu -->
<menuitem
id="owner_item_menu"
name="Owner"
parent="owner_menu"
action="Owner_action"
/>
<!-- end property menu -->
</odoo>
