<odoo>
<!-- property list view  -->
<record id="view_owner_tree" model="ir.ui.view">
<field name="name">owner lit view</field>
<field name="model">owner.owner</field>
<field name="arch" type="xml">
<tree string="owner list" multi_edit="1">
<field name="name"/>
<field name="phone"/>
<field name="Email"/>
<field name="property_ids" widget="many2many_tags"/>
</tree>
</field>
</record>  
<!-- end of list view -->

<!--  property form view -->
<record id="view_owner_form" model="ir.ui.view">
<field name="name">owner form view</field>
<field name="model">owner.owner</field>
<field name="arch" type="xml">
<form string="owner form">
<sheet>
<header>
<button string="draft" name="action_draft" type="object" class="oe_highlight" invisible="state =='draft'"/>
<button string="pending" name="action_pending" type="object" class="oe_highlight" invisible="state!='draft'"/>
<button string="sold" name="action_sold" type="object" class="oe_highlight" invisible="state!='pending'"/>
<field name="state" widget="statusbar" />
</header>
<div class="oe_title">
<lable for="ref"/>
<h1><field name="ref"/>
</h1>

</div>
<group name="name" string="string">
 <field name="name"/>
<field name="phone"/>
<field name="Email"/>
<field name="property_ids" widget="many2many_tags"
/>
</group>




</sheet>
<div class="oe_chatter">
<field name="message_follower_ids"/>
<field name="activity_ids"/>
<field name="message_ids"/>
</div>
</form>
</field>
</record>
 
<!-- end of search view -->
<!-- server action closed -->

<!--  start of property action -->
<record id ="Owner_action"  model="ir.actions.act_window">
<field name="name">owner_action</field>
<field name="res_model">owner.owner</field>
</record>
<!-- end of property action -->
