<!-- cron action -->
<record id="check_sealing_cron" model="ir.cron">
    <field name="name">Property:check_expted_sealing_date</field>
    <field name="model_id" ref="model_property_property"/>
    <field name="state">code</field>
    <field name="code">model.check_expted_sealing_date()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall"> -1</field>
    
</record>
<!-- property menu -->
<menuitem
id="property_item_menu"
name="Property"
parent="property_root_menu"
action="property_action"
/>
<!-- end property menu -->
</odoo>
